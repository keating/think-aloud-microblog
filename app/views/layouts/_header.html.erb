<div id="header" style="width: 100%;height: 35px;background-color: #000000;position: fixed;top:0;" class="opacity">
  <div  style="margin: 0 auto;width: 710px;">
    <div style="height: 35px;float: left;padding-top: 2px;">
      <%= link_to logo, root_path %>
    </div>
    <label style="display:inline-block;color: #ffffff;font-style: italic;font-size: 2em;margin-left: 5px;">x-men</label>
    <nav style="padding-top: 5px;">
      <ul>
        <li><%= link_to "Home", root_path %></li>
        <% if signed_in? %>
            <li><%= link_to "Users", users_path %></li>
            <li><%= link_to "Profile", current_user %></li>
            <li><%= link_to "Settings", edit_user_path(current_user) %></li>
        <% end %>
        <li><%= link_to "Help", help_path %></li>
        <% if signed_in? %>
            <li><%= link_to "Sign out", signout_path, :method => :delete %></li>
        <% else %>
            <li><%= link_to "Sign in", signin_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</div>
