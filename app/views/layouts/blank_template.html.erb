<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <%= csrf_meta_tag %>
  <%= render 'layouts/stylesheets' %>
  <%= javascript_include_tag :defaults %>
</head>
<body>
<div class="container">
  <section>
    <% flash.each do |key, value| %>
        <%= content_tag(:div, value, :class => "flash #{key}") %>
    <% end %>
    <%= yield %>
  </section>
</div>
<%#= debug(params) if Rails.env.development? %>
<script type="text/javascript">
    setTimeout(function () {
        $(".flash").fadeOut("slow");
    }, 500);
</script>
</body>
</html>
