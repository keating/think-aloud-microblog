<table class="front" summary="For signed-in users">
  <tr>
    <td class="main">
      <h1 class="micropost">What's up?</h1>
      <%= render 'shared/micropost_form' %>
      <%= render :partial => "microposts/microposts", :locals => {:microposts => @feed_items, :view_gravatar => true} %>
    </td>
    <td class="sidebar">
      <%= render 'shared/user_info' %>
      <%= render 'shared/stats' %>
    </td>
  </tr>
</table>