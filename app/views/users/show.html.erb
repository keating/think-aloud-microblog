<table class="profile" summary="Profile information">
  <tr>
    <td class="main">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <%= render 'users/follow_form' if signed_in? %>
      <%= render :partial => "microposts/microposts", :locals => {:microposts => @microposts, :view_gravatar => false} %>
    </td>
    <td class="sidebar round">
      <%= render :partial => 'shared/sidebar', :locals => {:user => @user} %>
    </td>
  </tr>
</table>
